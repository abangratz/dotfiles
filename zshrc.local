alias ats="aptitude search"
ctg() { ctags -a -e -f TAGS --tag-relative -R app lib vendor }

if ! check_com ast &>/dev/null ; then
  ast() { autossh -t "$@" 'tmux attach -tsandman || tmux new -ssandman' }
  compdef ast=ssh
fi
export VISUAL='gvim -f'
if ! check_com acks &>/dev/null ; then
	acks() { ack-grep $@ spec/ }
	compdef acks=grep
fi

if ! check_com office &>/dev/null ; then
	office() {
		xrandr --output HDMI1 --mode 1920x1200
		xrandr --output LVDS1 --mode 1366x768 --below HDMI1
		synclient TapButton1=1
		synclient TapButton2=2
		synclient TapButton3=3
	}
fi

if ! check_com home &>/dev/null ; then
	home() {
		xrandr --output HDMI1 --off
		synclient TapButton1=1
		synclient TapButton2=2
		synclient TapButton3=3
	}
fi

# Keep PWD for current TMUX window

if [ -n "$TMUX" ] ; then
	I=$(tmux display -p "#I")
	tmux setenv TMUXPWD_${I} $PWD
fi

path+=("$HOME/bin" "$HOME/.rvm/bin")

[[ -s $HOME/.tmuxinator/scripts/tmuxinator ]] && source $HOME/.tmuxinator/scripts/tmuxinator
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

alias ack=ack-grep
alias hdeploy="git push origin master && git push heroku master"
alias hdbm='heroku run rake db:migrate'

