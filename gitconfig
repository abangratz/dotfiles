[merge]
	tool = gvimdiff
	log = true
[alias]
	ci = commit
	co = checkout
	b = branch
	st = status
	d = diff
	ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	l10 = log --oneline -10
[color]
	status = auto
	ui = auto
[rerere]
	enabled = true
[push]
	default = current
[core]
	excludesfile = ~/.gitignore.global
[branch]
	autosetupmerge = always
[diff]
	tool = vimdiff
